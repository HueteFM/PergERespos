<%- include('partials/head') %>
    <br>
    <hr>
    <div class="container">
        
        <div class="card">
            <div class="card-header">
                <h2>Insira sua Pergunta</h2>
            </div>            
            <div class="card-body">
                <form action="/salvarpergunta" method="POST">
                    <label for="titulo">Titulo da Pergunta</label><br>
                    <input type="text" name="titulo" class="form-control" placeholder="Título da pergunta"><br>
                    <label for="descricao">Descrição da Pergunta</label><br>
                    <textarea placeholder="Descreva sua pergunda aqui" class="form-control" name="descricao"></textarea>
                    <br>
                    <button class="btn btn-primary">Enviar</button>
                </form>
            </div>

        </div>

    </div>


    <%- include('partials/footer') %>